{% extends 'base.html.twig' %}

{% block title %}Season #{{ season.number }}
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			{{ season.program.title }}<br>
			Saison
			{{ season.number }}<br>
			{{ season.year }}<br>

			{% for episode in season.episodes %}<br>
				{#{{ dump(episode.id) }}#}
				<p>{{ episode.number }}.
					{{ episode.title }}</p>
				{#{{ dump(season.id) }}#}
				<a href="{{ path("program_episode_show", {programId: program.id, seasonId: season.id, episodeId: episode.id }) }}">
					Voir plus</a><br>
			{% endfor %}
		</div>
	</div>
{% endblock %}
