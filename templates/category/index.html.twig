{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<h1>Catégories:
	</h1>
	{% for category in categories %}
		<div class="d-flex ms-4">
			<h2>{{ loop.index }}
				<a href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a>
			</h2>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}
	<a href="{{ path('category_new') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter une catégorie</a>
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
